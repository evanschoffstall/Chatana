{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/src/multi-agent-harness"
      ],
      "outFiles": [
        "${workspaceFolder}/src/multi-agent-harness/dist/**/*.js"
      ],
      "preLaunchTask": "npm: watch",
      "sourceMaps": true
    },
    {
      "name": "Run Extension (No Watch)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/src/multi-agent-harness"
      ],
      "outFiles": [
        "${workspaceFolder}/src/multi-agent-harness/dist/**/*.js"
      ],
      "sourceMaps": true
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/src/multi-agent-harness",
        "--extensionTestsPath=${workspaceFolder}/src/multi-agent-harness/out/test/suite/index"
      ],
      "outFiles": [
        "${workspaceFolder}/src/multi-agent-harness/out/test/**/*.js"
      ],
      "sourceMaps": true
    }
  ]
}
